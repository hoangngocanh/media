<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:id="@+id/img_song1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/img_music"/>
            <ImageView
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:id="@+id/img_song2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/img_music"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:id="@+id/img_song3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/img_music"/>
            <ImageView
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:id="@+id/img_song4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/img_music"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="5"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_margin="0dp"
                    android:id="@+id/tv_namePlaylist"
                    android:textSize="21dp"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tÃªn albuml"/>
            </LinearLayout>

            <RelativeLayout
            android:padding="3dp"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_alignParentRight="true">
            <Button
                android:id="@+id/btn_expand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_expand"/>
        </RelativeLayout>
        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>